<%- include("partials/header") %>


  <body>

    <%- include("partials/nav") %>

      <section class="container-fluid">
        <div id="catchthis">
          <article class="container-fluid row justify-content-center pokemonimg">

            <img src="<%= pokemon.sprites.other.home.front_default %>" alt="">
            <label class="fadedtext">Je hebt 3 kansen om deze pokemon te vangen!</label>
          </article>
        </div>
        <form action="/catcher/<%= pokemon.id %>" method="post">
          <section class="pokeballbody">
              <div class="pokeball  <% if(isgevangen) { %> pokeball-green : pokeball-red <% } %> "></div>
              <div class="pokebtn" name="pokebtn">
                  <button type="submit" class="invisible-button">Catch Pok√©mon</button>
              </div>
              <input type="hidden" name="pokemonId" value="<%= pokemon.id %>">
    <input type="hidden" name="isCaught" value="<%= pokemon.isCaught %>">
              <% if(isgevangen) { %> <h3>GEVANGEN</h3> <% } %>
          </section>
      </form>
        <% if(isgevangen){ %>
          <p>balls</p>
          <% } %>
            <div class="pokemonstats-rightcorner">

              <section class="pokemonstats">
                <article class="container-fluid row justify-content-center card">
                  <div class="labelcontainer">
                    <label class="pokemoncatcher">
                      <%= pokemon.name %>
                    </label>

                  </div>
                  <% pokemon.stats.forEach(stat=> { %>
                    <% if (stat.stat.name==='hp' || stat.stat.name==='attack' || stat.stat.name==='defense' ) { %>

                      <p>
                        <%= stat.stat.name %>: <%= stat.base_stat %>
                      </p>
                      <% }}); %>
                      <label class="pokemoncatcher"></label>
                </article>
              </section>




            </div>
  </body>

  <%- include("partials/footer") %>