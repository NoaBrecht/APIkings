<%- include("partials/header") %>

    <body>
        <%- include("partials/nav") %>
            <article class="container-fluid row justify-content-center">
                <div class="text-center">
                    <a href="/all" class="btn btn-danger"><i class="bi bi-check-circle"></i> Toon alle Pokémon</a>

                    <% if(pokemonsCount===0) {%>
                        <h1>Geen Pokémon gevonden</h1>
                        <p>Wees de eerste om een Pokémon te vangen! Ga eerst naar de starterpagina <a
                                href="/starterpokemon">om je eerste Pokémon te kiezen</a>
                        </p>
                        <% } else { %>
                            <h1>Jouw Pokémon</h1>
                            <p>Je hebt <%=pokemonsCount%> Pokémon in bezit</p>
                            <% } %>
                </div>
                <% for(let pokemon of pokemons) { %>
                    <section class="card text-center <%=pokemon.type%>">
                        <a href="/pokemon/<%=pokemon.id%>">
                            <article class="card-body">
                                <h1 class="card-title">
                                    <%= pokemon.name %>
                                </h1>
                                <p class="card-text">
                                    <%= pokemon.id %>
                                </p>
                            </article>

                            <img src="<%=pokemon.image%>" class="card-img-top <%=pokemon.colour%>"
                                alt="een afbeelding van <%= pokemon.name %>">
                        </a>
                    </section>
                    <% } %>
            </article>
            <%- include("partials/footer") %>